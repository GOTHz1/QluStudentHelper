<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="-4dp"
    android:layout_marginBottom="4dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/score_item_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="-3dp"
        android:layout_marginEnd="-3dp"
        android:foreground="#00F6F6F6"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="课程："
                        android:textColor="@color/baseBlue"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/kcmc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20sp"
                        android:ellipsize="end"
                        android:layout_marginTop="9dp"
                        android:maxLines="5"
                        android:textColor="@color/purple_700"
                        android:textSize="20sp"
                        tools:text="计算机网的撒法络" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <TextView
                        android:layout_width="61dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="成绩："
                        android:textColor="@color/light_blue_800"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/zcj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="99"
                        android:textSize="20sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="11"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="类别："
                        android:textColor="@color/brown_800"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/kcxzmc"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:ellipsize="end"
                        android:maxLines="5"
                        android:textColor="#302828"
                        android:textSize="13sp"
                        tools:text="专业课" />
                </LinearLayout>
<TextView
    android:id="@+id/ksxzmc"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="1dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="4dp"
    android:layout_weight="8"
    android:textSize="12dp"
    android:textColor="@color/red_800"
    android:text="*重修"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6.5">

                    <TextView
                        android:layout_width="61dp"
                        android:layout_height="wrap_content"
                        android:text="学分："
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/xf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2.5"
                        android:textSize="20sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
